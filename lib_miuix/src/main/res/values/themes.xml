<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" parent="android:Theme.Holo.Light">
        <!-- Dialog styles -->
        <item name="android:dialogTheme">@style/Theme.Light.Dialog</item>
        <item name="android:alertDialogTheme">@style/Theme.Light.Dialog.Alert</item>
        <item name="android:alertDialogStyle">@style/AlertDialog</item>
        <item name="android:alertDialogIcon">@null</item>
    </style>
    <!-- The light theme for app for MIUI SDK, which is default theme. -->
    <style name="Theme.Light" />
    <style name="Theme.AppCompat">
    </style>

    <style name="Theme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- The light theme for dialog. -->
    <style name="Theme.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="windowMaxWidthMinor">@dimen/dialog_max_width_minor</item>
                <item name="windowMaxWidthMajor">@dimen/dialog_max_width_major</item>
                <item name="windowMaxHeightMinor">@dimen/dialog_max_height_minor</item>
                <item name="windowMaxHeightMajor">@dimen/dialog_max_height_major</item>
                <!-- do not fix dialog width or height by default. see Theme.Light.Dialog.FixedSize -->
                <item name="windowFixedWidthMajor">0dip</item>
                <item name="windowFixedWidthMinor">0dip</item>
                <item name="windowFixedHeightMajor">0dip</item>
                <item name="windowFixedHeightMinor">0dip</item>
    </style>

    <!-- The light theme for alert dialog. -->
        <style name="Theme.Light.Dialog.Alert">
        </style>
</resources>
